<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oopproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RegisterOrder.HistoryOrder"></activity>
        <activity android:name=".NewOrder.ConfirmationOrder" />
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oopproject.MainActivity" />
        </activity>
        <activity android:name=".ManageCateg.ManageCategories" />
        <activity android:name=".ManageProduct.Add_product_activity" />
        <activity android:name=".ManageProduct.ManageProducts" />
        <activity android:name=".NewOrder.activity_order" />
        <activity
            android:name=".NewOrder.ProductListActivity"
            android:label="@string/title_product_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewOrder.ProductDetailActivity"
            android:label="@string/title_product_detail"
            android:parentActivityName=".NewOrder.ProductListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oopproject.NewOrder.ProductListActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>